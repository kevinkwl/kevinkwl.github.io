a
  text-decoration: none
  color: inherit

/* Each state */

a:visited { text-decoration: none; color: inherit; }
a:hover { text-decoration: none; color:inherit; }
a:focus { text-decoration: none; color:inherit; }
a:hover, a:active { text-decoration: none; color:inherit; }

.full
    width: 100%
    min-height: 100vh



.icon-wrapper
  border-radius: 50%
  width: 36px
  height: 36px

  display: inline-block
  border-color: transparent
  overflow: hidden;

  &:hover
    div
      svg.social
        .use-mask
          fill: $blue-bright
        .use-icon
          fill: #000

  div
    top: 0;
    left: 0;
    width: 100%
    height: 100%;

    svg.social
      width: 100%
      height: 100%
      background-color: transparent;

      use
        transition: all .2s ease-in-out

      .use-mask
        fill: #fff

      .use-icon
        fill: $black-light

.overlay
  position: absolute
  top: 0
  left: 0
  width: 100%
  height: 100%
  z-index: $zindex-1
  opacity: 0.5
  transition: all .3s ease-in-out

.overlay-gray
  background-color: rgb(81, 81, 83)

.left
  float: left
.right
  float: right

.clearfix
  clear: both


.boxShadowBottom
  box-shadow: 0 4px 2px -2px rgba(0, 0, 0, 0.05)

.boxShadowTop
  box-shadow: 0 -4px 2px -2px rgba(0, 0, 0, .05)


.container
  padding-right: 20px
  padding-left: 20px
  margin-left: auto
  margin-right: auto

.card
  margin-left: auto
  margin-right: auto
  max-width: 660px
  background: #fff
  box-shadow: 0 1px 4px rgba(0, 0, 0, .04)
  border: 1px solid rgba(0, 0, 0, .09)
  border-radius: 3px
  padding: 10px

.bg-gray
  background-color: rgb(250, 250, 250)

.bg-white
  background-color: #fff

div.social
    display: inline-block
    a
      margin-left: 1em
      margin-right: 1em

      &:first-child
        margin-left: 0
      &:last-child
        margin-right: 0

.full-width
  width: 100vw !important
  max-width: 100vw !important
  position: relative;
  left: 50%;
  right: 50%;
  margin-left: -50vw;
  margin-right: -50vw;
