//----------------------------------------------------
// table
//----------------------------------------------------
table {
  margin: 20px 0;
  width: $table-width;
  border-collapse: collapse;
  border-spacing: 0;
  border: 1px solid $table-border-color;
  font-size: $table-font-size;
  table-layout: fixed;
  word-wrap: break-all;
}
table>tbody>tr {
  &:nth-of-type(odd) { background-color: $table-row-odd-bg-color; }
  &:hover { background-color: $table-row-hover-bg-color; }
}

caption, th, td {
  padding: $table-cell-padding;
  text-align: $table-content-alignment;
  vertical-align: $table-content-vertical;
  font-weight: normal;
}

th, td {
  border-bottom: 3px solid $table-cell-border-bottom-color;
  border-right: 1px solid $table-cell-border-right-color;
}

th {
  padding-bottom: 10px;
  font-weight: $table-th-font-weight;
}

td { border-bottom-width: 1px; }


//----------------------------------------------------
// blockquote
//----------------------------------------------------

blockquote {
  padding: 0 15px;
  color: $grey-dim;
  border-left: 4px solid $gray-lighter;

  cite::before {
    content: "-";
    padding: 0 5px;
  }
}


//----------------------------------------------------
// horizontal rule
//----------------------------------------------------

hr
  margin-top: 44px
  margin-bottom: 34px
  text-align: center
  border: 0

  &:before
    font-size: 28px;
    font-weight: 400;
    position: relative;
    top: -30px;
    display: inline-block;
    margin-left: .6em;
    content: '...';
    letter-spacing: .6em;
    color: rgba(0,0,0,.6);
