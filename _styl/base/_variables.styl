$read-more-color                = rgba(0, 0, 0, .44)
$read-more-font-size            = 12px
$read-more-hover-color          = rgba(0, 0, 0, .6)


$tag-font-size = 14px

$post-meta-size = 12px
$post-meta-color = rgba(0, 0, 0, .44)

$taxonomy-name-font-size = 14px
$taxonomy-name-color = rgba(0, 0, 0, .44)

// full-image
$full-image-width             = 110%
$full-image-margin-horizontal = -5%
$full-image-margin-vertical   = 25px

//  .post-expand .post-eof
//  In Muse scheme, margin above and below the post separator
$post-eof-margin-top          = 80px  //  or 160px for more white space
