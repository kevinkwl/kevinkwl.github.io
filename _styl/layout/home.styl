html
  width: 100%
  height: 100%

body.home
  color: $home-text-color
  width: 100%
  height: 100%
  margin: 0
  font-family: $font-family-base

  main
    width: 100%
    height: 100%
    position: relative


  nav.navbar
    display: none
  header
    display: none

  .wrapper
    width: 70%
    text-align: center
    padding: 2em
    margin: 0 auto
    position: absolute
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: $zindex-1



    +mobile()
      width: 90%


    h1
      font-family: $font-family-home-title
      font-weight: $font-weight-lighter
      text-transform: uppercase
      letter-spacing: 6px
      font-size: $font-size-home-title
      line-height: 1.2em
      margin: .2em auto
      color: inherit

      +mobile()
        font-size: $font-size-home-title-small

    h2
      font-family: $font-family-home-sub
      font-weight: $font-weight-lighter
      font-size: $font-size-home-sub

      +mobile()
        font-size: $font-size-home-sub-small


    div.nav
      margin-top: 1em

      ul.links
        padding-left: 0
        li
          list-style: none
          display: inline-block
          text-transform: uppercase

          margin-left: 3em
          text-align: center

          +mobile()
            display: block
            margin: 0 auto
            margin-bottom: 1em

            &:last-child
              margin-bottom: 0



          &:first-child
            margin-left: 0



          a
            text-decoration: none
            color: $home-text-color
            font-family: $font-family-home-link
            vertical-align: middle
            text-align: center
            transition: all .2s ease-in-out

            &:hover
              color: $blue-bright


  footer
    display: none

  div.home-social-bar
    vertical-align: middle;
    width: 100%
    margin: 1px 0
    display: block
    z-index: $zindex-1
    position: absolute
    left: 50%
    bottom: 3em
    transform: translateX(-50%);
    text-align: center





.home-overlay
  position: absolute
  top: 0
  left: 0
  background-position: 50% 50%
  background-repeat: no-repeat
  background-size: cover
  height: 100%
  width: 100%
  opacity: 1
  z-index: $zindex-bottom
  transition: all .3s ease-in-out
